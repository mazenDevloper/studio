
{
  "entities": {
    "UserYouTubeData": {
      "title": "YouTube User Data",
      "description": "JSON-style storage for channels and videos.",
      "type": "object",
      "properties": {
        "favoriteChannels": { "type": "array" },
        "starredChannelIds": { "type": "array" },
        "savedVideos": { "type": "array" },
        "videoProgress": { "type": "object" }
      }
    },
    "UserFootballData": {
      "title": "Football Preferences",
      "description": "JSON-style storage for teams and leagues.",
      "type": "object",
      "properties": {
        "favoriteTeams": { "type": "array" },
        "favoriteTeamIds": { "type": "array" },
        "favoriteLeagueIds": { "type": "array" }
      }
    },
    "UserSettingsData": {
      "title": "System Settings",
      "description": "JSON-style storage for map and app preferences.",
      "type": "object",
      "properties": {
        "mapSettings": { "type": "object" },
        "reminders": { "type": "array" },
        "reciterKeywords": { "type": "array" }
      }
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/users/{userId}/data/youtube": {
      "schema": "UserYouTubeData",
      "description": "Standalone YouTube data file."
    },
    "/users/{userId}/data/football": {
      "schema": "UserFootballData",
      "description": "Standalone Football data file."
    },
    "/users/{userId}/data/settings": {
      "schema": "UserSettingsData",
      "description": "Standalone Settings data file."
    }
  }
}
